#initiative program

import random

class Pc():
    def Pc (self,playerName,characterName,iniMod,init):
        self.playerName = input("Player name here")
        self.characterName = input("Character name here")
        self.iniMod = input("dexterity +  any feats")
        self.init = self.iniMod + randint(1,20)

Pc1 = Pc()
